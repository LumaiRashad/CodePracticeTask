@model QASystemTask.Models.UserLogin
@{
    ViewBag.Title = "Login";
}

<h2>Log in with Local Account</h2>

@using (Html.BeginForm("Login", "User"))
{
        @Html.AntiForgeryToken()
    
    <div class="form.group" style="height: 50px; margin: 2%">
        @Html.ValidationMessageFor(x => x.UserName)
        @Html.Label("Userame:")
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    </div>
    
    <div class ="form.group" style="height: 70px; margin: 2%"> 
        @Html.ValidationMessageFor(x => x.Password)
        @Html.Label("Password:")
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>

    <div class="checkbox" style ="margin: 2%;">
        <label>
            @Html.CheckBoxFor(x => x.RememberMe) Remember Me
        </label>
    </div>

     <div class="form.group" style= "margin: 3%">
        <button class="btn btn-primary" type="submit">
            Log in
        </button>
    </div>    
}
@section Scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

