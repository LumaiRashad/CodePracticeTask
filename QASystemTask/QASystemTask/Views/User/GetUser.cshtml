@model QASystemTask.Models.UserTable
@{
    ViewBag.Title = "GetUser";
}

<h2>Register to QA System</h2>



@using (Html.BeginForm("CreateUser", "User"))
{
    @Html.AntiForgeryToken()
    
    <div class="form.group" style="height: 50px; margin: 2%">
        @Html.ValidationMessageFor(x => x.Name)
        @Html.Label("Full Name:")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <div class="form.group" style="height: 50px; margin: 2%">
        @Html.ValidationMessageFor(x => x.UserName)
        @Html.Label("User Name:")
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    </div>

    <div class="form.group" style="height: 50px; margin: 2%">
        @Html.ValidationMessageFor(x => x.Email)
        @Html.Label("E-mail Address:")
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class ="form.group" style="height: 70px; margin: 2%"> 
        @Html.ValidationMessageFor(x => x.Password)
        @Html.Label("Password:")
        @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
    </div>

    <div class="form.group" style= "margin: 3%">
        <button class="btn btn-primary" type="submit">
            Submit
        </button>
    </div>
}

@section Scripts{
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

}

