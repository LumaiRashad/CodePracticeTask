@model QASystemTask.Models.QuestionDBTable
@{
    ViewBag.Title = "GetQuestion";
}

<h2>Ask a Question</h2>

@using (Html.BeginForm("CreateQuestion", "Question"))
{
    <div class="form.group" style="height: 50px; margin: 2%">
        @Html.ValidationMessageFor(x => x.QuestionString)
        @Html.TextAreaFor(x => x.QuestionString, new { @class = "form-control" })
    </div>
    
          
    <div class="form.group" style= "margin: 3%">
        <button class="btn btn-primary" type="submit">
            Add Question
        </button>
    </div>
}